<% jobs = @jobs.where(active: true) %>

<h1>All jobs</h1>
<br>
<% jobs.each do |job| %>
  <h2><%= job.title %></h2>
  <p>Company: <%= job.company.name %></p>
  <a href="/jobs/<%= job.id %>">More info</a>
  <br>
<% end %>

<br>
<% if current_user.admin %>
  <%= link_to "New job", new_job_path %>
<% end %>